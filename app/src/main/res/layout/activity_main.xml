<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.google.ar.core.examples.java.helloar.HelloArActivity">

  <!-- Camera / AR surface -->
  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"
      android:keepScreenOn="true" />

  <!-- Small HUD (top-left) -->
  <LinearLayout
      android:id="@+id/hudContainer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_margin="12dp"
      android:orientation="vertical"
      android:padding="8dp"
      android:background="#66000000"
      android:elevation="6dp">

    <TextView
        android:id="@+id/tvEarthState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earth: —"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvLatLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAT/LNG: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLatLngAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H-Accuracy: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALTITUDE: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAltAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V-Accuracy: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEADING: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvHeadingAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading accuracy: —"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvAnchorState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anchor: none"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
  </LinearLayout>

  <!-- Ray distance controls (top-right) -->
  <LinearLayout
      android:id="@+id/rayControlsContainer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="10dp"
      android:background="#66000000"
      android:orientation="vertical"
      android:padding="8dp"
      android:visibility="gone"
      android:elevation="8dp">

    <Button
        android:id="@+id/btnRayPlus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="+"
        android:textSize="22sp"
        android:contentDescription="Increase distance" />

    <View
        android:layout_width="0dp"
        android:layout_height="8dp" />

    <Button
        android:id="@+id/btnRayMinus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="−"
        android:textSize="22sp"
        android:contentDescription="Decrease distance" />
  </LinearLayout>

  <!-- Bottom info card -->
  <TextView
      android:id="@+id/poseInfoCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#AA000000"
      android:textColor="@android:color/white"
      android:padding="12dp"
      android:textSize="14sp"
      android:visibility="gone"
      android:elevation="6dp" />

</RelativeLayout>