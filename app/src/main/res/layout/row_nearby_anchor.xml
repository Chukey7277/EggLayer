<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingStart="12dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Thumbnail (hidden if no image) -->
    <ImageView
        android:id="@+id/thumb"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/nearby_row_thumbnail"
        android:src="@android:drawable/ic_menu_report_image"
        android:visibility="gone" />

    <!-- Info button -->
    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/nearby_row_info"
        android:src="@android:drawable/ic_menu_info_details" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/thumb"
        android:layout_toStartOf="@id/btnInfo"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Star"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Subtitle (distance + badge only; no ID) -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/thumb"
        android:layout_toStartOf="@id/btnInfo"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:text="â‰ˆ 3.4 m"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end" />

</RelativeLayout>